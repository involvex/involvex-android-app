{
  "name": "involvex-monorepo",
  "version": "0.0.3",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "bun --cwd packages/app run android",
    "app:ios": "bun --cwd packages/app run ios",
    "web": "bun --cwd packages/web run dev",
    "api": "bun --cwd packages/api run dev",
    "build:app": "bun --cwd packages/app run build:android",
    "build:web": "bun --cwd packages/web run build",
    "lint": "bun run lint:app && bun run lint:web && bun run lint:api",
    "lint:app": "bun --cwd packages/app run lint",
    "lint:web": "bun --cwd packages/web run lint",
    "lint:api": "bun --cwd packages/api run lint",
    "typecheck": "bun run typecheck:app && bun run typecheck:web && bun run typecheck:api",
    "typecheck:app": "bun --cwd packages/app run typecheck",
    "typecheck:web": "bun --cwd packages/app run typecheck",
    "typecheck:api": "bun --cwd packages/api run typecheck",
    "db:create": "bun --cwd packages/database run create",
    "db:migrate": "bun --cwd packages/database run migrate",
    "deploy:api": "bun --cwd packages/api run deploy",
    "deploy:web": "bun --cwd packages/web run deploy",
    "deploy:db": "bun --cwd packages/database run deploy"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.0.0"
  }
}
